{
  "version": "3.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "hoist": true,
      "ignoreScripts": true
    }
  },
  "packages": [
    "packages/*"
  ]
}
