{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "lerna exec --parallel -- 'yarn start'",
    "start:storybook": "lerna exec --scope='@richsoni/storybook' --parallel -- 'yarn start' ",
    "start:gatsby": "lerna exec --scope='@richsoni/gatsby-site' --parallel -- 'yarn start' ",
    "prebuild": "yarn bootstrap && lerna link",
    "build": "lerna exec --parallel -- 'yarn build'",
    "bootstrap": "lerna bootstrap"
  },
  "devDependencies": {
    "lerna": "^3.10.5"
  }
}
