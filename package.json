{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "npm run bootstrap",
    "prebootstrap": "lerna exec ../../script/prune-package-locks",
    "bootstrap": "lerna bootstrap && lerna exec --parallel npm run prepare",
    "clean": "lerna exec --parallel -- 'rm -rf dist' && lerna clean && rm -rf node_modules",
    "build": "lerna run build --parallel --scope='@richsoni/storybook' --scope='@richsoni/gatsby-site'",
    "cleaninstall": "npm run clean && npm install",
    "start": "lerna exec --parallel -- 'npm run start'",
    "start:storybook": "lerna exec --scope='@richsoni/storybook' --parallel -- 'npm run start' ",
    "start:gatsby": "lerna exec --scope='@richsoni/gatsby-site' --parallel -- 'npm run start' "
  },
  "devDependencies": {
    "lerna": "^3.10.5"
  },
  "dependencies": {
    "lerna-update-wizard": "^0.11.1",
    "netlify-cli": "^2.8.3",
    "node": "^10.15.1",
    "npm": "^6.9.0",
    "plop": "^2.2.1",
    "strftime": "^0.10.0"
  }
}
