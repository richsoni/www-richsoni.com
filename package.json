{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "lerna exec --parallel -- 'npm run start'",
    "start:storybook": "lerna exec --scope='@richsoni/storybook' --parallel -- 'npm run start' ",
    "start:gatsby": "lerna exec --scope='@richsoni/gatsby-site' --parallel -- 'npm run start' ",
    "prebuild": "npm run bootstrap && lerna link",
    "build": "lerna run build --parallel --ignore='@richsoni/storybook' --ignore='@richsoni/gatsby-site' && lerna run build --parallel --scope='@richsoni/gatsby-site' --scope='@richsoni/storybook'",
    "bootstrap": "lerna bootstrap --hoist"
  },
  "devDependencies": {
    "lerna": "^3.10.5"
  },
  "dependencies": {
    "lerna-update-wizard": "^0.11.1",
    "node": "10.15.3",
    "npm": "^6.9.0",
    "plop": "^2.2.1",
    "strftime": "^0.10.0"
  },
  "workspaces": [
     "packages/*"
  ]
}
